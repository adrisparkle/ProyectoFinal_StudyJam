<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="5"
    tools:context="com.sparklesfactory.appnavidad.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <!--Sobre poner vista solo se puede con un relative-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondito"
                android:scaleType="centerCrop"/>
            <!--Alpha usa la transparecia de los atributos del 0 al 1-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:alpha="0.6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:id="@+id/tit"
                    android:layout_marginTop="80dp"
                    android:textStyle="italic|bold"
                    android:fontFamily="cursive" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detalle.tv.detalle"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:layout_marginTop="150dp"
                    android:textStyle="italic|bold"
                    android:fontFamily="cursive"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sparkles Factory"
                    android:layout_marginTop="490dp"
                    android:gravity="center"
                    android:alpha="0.6"
                    android:textColor="#fff"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:id="@+id/ll"
                android:weightSum="2"
                android:orientation="vertical">
                <Button
                    android:id="@+id/Manualidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detalle.tv.boton1"
                    android:textAllCaps="false"
                    android:background="@drawable/boton2"
                    android:drawableLeft="@drawable/corona"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:textColor="#590000"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:onClick="Manualidades"
                    />

                <Button
                    android:id="@+id/Ideas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detalle.tv.boton2"
                    android:textAllCaps="false"
                    android:background="@drawable/boton2"
                    android:drawableLeft="@drawable/esfera"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:textSize="20dp"
                    android:textColor="#590000"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:onClick="Ideas"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

